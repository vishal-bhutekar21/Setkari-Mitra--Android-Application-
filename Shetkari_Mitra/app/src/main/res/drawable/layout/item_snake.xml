<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard1"
        app:cardBackgroundColor="#FFC3A5C8"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="13dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/imageView_symtomes"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bleeding1" />

        <TextView
            android:id="@+id/sy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"

            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imageView_symtomes"
            android:text="bleeding"
            android:textColor="#040303"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/imageView_symtomes"
            android:text="bledding"
            android:textColor="#33120F"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>