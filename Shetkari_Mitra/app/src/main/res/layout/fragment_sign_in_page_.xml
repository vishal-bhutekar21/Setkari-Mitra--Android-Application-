<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:text="Sign In page."/>



        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:id="@+id/usernameEditText"
            android:background="@drawable/roundedtext"
            android:hint="Enter Your Name"
            android:drawableStart="@drawable/left_user"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="10dp"
            android:drawableTint="#775050"
            android:textSize="19dp"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:id="@+id/mobileNumberEditText"
            android:inputType="phone"
            android:background="@drawable/roundedtext"
            android:hint="Enter Mobile Number"
            android:drawableStart="@drawable/left_call_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="10dp"
            android:drawableTint="#775050"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/emailEditTextView"
            android:background="@drawable/roundedtext"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:drawableStart="@drawable/left_email_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="10dp"
            android:drawableTint="#775050"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/passwordEditText"
            android:background="@drawable/roundedtext"
            android:hint="Enter Password."
            android:textStyle="bold"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableStart="@drawable/left_pass_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="10dp"
            android:drawableTint="#775050"
            />

        <TextView
            android:layout_width="200dp"

            android:layout_height="40dp"
            android:text="Emergency Contacts"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:padding="2dp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:textColor="#FF1744"
            android:background="@drawable/roundedtext"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/roundedtext"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/emergencyNameEditText1"
                android:inputType="text"
                android:hint="Contact 1 Name :"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableStart="@drawable/left_call_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="10dp"
                android:drawableTint="#775050"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/emergencyNumberEditText1"
                android:hint="Number"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:orientation="vertical"
            android:background="@drawable/roundedtext"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/emergencyNameEditText2"
                android:hint="Contact 2 Name :"
                />
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableStart="@drawable/left_call_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="10dp"
                android:drawableTint="#775050"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/emergencyNumberEditText2"
                android:hint="Number"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:orientation="vertical"
            android:background="@drawable/roundedtext"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="text"
                android:id="@+id/emergencyNameEditText3"
                android:hint="Contact 3 Name :"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableStart="@drawable/left_call_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="10dp"
                android:drawableTint="#775050"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/emergencyNumberEditText3"
                android:hint="Number"
                />


        </LinearLayout>


        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Sign Up"/>


    </LinearLayout>
</ScrollView>
